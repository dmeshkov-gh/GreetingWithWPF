<Window x:Class="CompanyProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CompanyProj.ViewModels"
        xmlns:local="clr-namespace:CompanyProj"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header ="Departments">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ComboBox Grid.Row ="0" x:Name="Departments" ItemsSource="{Binding Departments}" SelectedIndex="0" 
                          DisplayMemberPath="Name" 
                          HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" 
                          Height ="25" Width="120"/>
                <GroupBox Grid.Row ="1" Header ="Actions">
                    <StackPanel>
                        <Button x:Name="AddEmployee" Content="Add Employee" 
                                HorizontalAlignment="Center" VerticalAlignment="Top" Margin ="5" 
                                Height="22" Width="120" Click="AddEmployee_Click"/>
                        <Button x:Name="RemoveEmployee" Content="Remove Employee" 
                                HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" 
                                Height="22" Width="120"/>
                        <Button x:Name="AddDepartment" Content="Add Department" 
                                HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" 
                                Height="22" Width="120" Click="AddDepartment_Click"/>
                        <Button x:Name="RemoveDepartment" Content="Remove Department" 
                                HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" 
                                Height="22" Width="120" Click="RemoveDepartment_Click"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Employees">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" x:Name="EmployeesList" Margin="5" 
                          ItemsSource="{Binding SelectedItem.Employees, ElementName=Departments}"/>
                <GroupBox Grid.Row="1" Header="Selected Employee" DataContext ="{Binding SelectedItem, ElementName=EmployeesList}">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Name:" Width="70"/>
                            <TextBox Width="200" Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Last name:" Width="70"/>
                            <TextBox Width="200" Text="{Binding LastName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Age:" Width="70"/>
                            <TextBox Width="200" Text="{Binding Age}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Salary:" Width="70"/>
                            <TextBox Width="200" Text="{Binding Salary}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Department:" Width="70"/>
                            <ComboBox Width="200" ItemsSource="{Binding Department}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
