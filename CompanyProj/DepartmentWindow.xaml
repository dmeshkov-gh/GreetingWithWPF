        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyProj"
        mc:Ignorable="d"
        Title="DepartmentWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="listDepartments" HorizontalAlignment="Left" Margin="89,88,0,0" VerticalAlignment="Top" Width="120" IsEditable="True" SelectionChanged="listDepartments_SelectionChanged"/>
        <Label x:Name="WhereToTransfer" Content="Department to transfer" HorizontalAlignment="Left" Margin="83,53,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
